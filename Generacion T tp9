        <h2>Formulario para Prestadores de Servicios</h2>

        <form action="https://formspree.io/f/tu-endpoint" method="POST">
            
            <fieldset>
                <legend>Datos Personales</legend>

                <label for="nombre">Nombre completo:</label>
                <input type="text" id="nombre" name="nombre" required minlength="3" placeholder="Ej: Juan Pérez">

                <label for="email">Correo electrónico:</label>
                <input type="email" id="email" name="email" required placeholder="Ej: juan@example.com">

                <label for="telefono">Teléfono:</label>
                <input type="tel" id="telefono" name="telefono" pattern="[0-9]{10}" placeholder="Ej: 1123456789">
            </fieldset>

            <fieldset>
                <legend>Información Profesional</legend>

                <label for="servicio">Tipo de servicio:</label>
                <select id="servicio" name="servicio" required>
                    <option value="">Seleccione una opción</option>
                    <option value="electricista">Electricista</option>
                    <option value="plomero">Plomero</option>
                    <option value="jardinero">Jardinero</option>
                    <option value="pintor">Pintor</option>
                    <option value="otro">Otro</option>
                </select>

                <label for="experiencia">Años de experiencia:</label>
                <input type="number" id="experiencia" name="experiencia" min="0" max="50" placeholder="Ej: 5">

                <label for="cv">Adjuntar CV (opcional):</label>
                <input type="file" id="cv" name="cv" accept=".pdf,.doc,.docx">
            </fieldset>

            <fieldset>
                <legend>Mensaje adicional</legend>

                <label for="mensaje">Mensaje:</label>
                <textarea id="mensaje" name="mensaje" rows="5" placeholder="Escribe aquí tu mensaje..." required></textarea>
            </fieldset>

            <button type="submit">Enviar formulario</button>
        </form>
    </section>

