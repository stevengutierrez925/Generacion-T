STYLE.CSS:

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 30px;
    color: #333;
}

h1, h2 {
    color: #2b5797;
}

section {
    background-color: #fff;
    padding: 25px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    max-width: 600px;
    margin: 0 auto;
}

form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

fieldset {
    border: 2px solid #2b5797;
    border-radius: 6px;
    padding: 15px 20px;
}

legend {
    color: #2b5797;
    font-weight: bold;
    padding: 0 8px;
}

label {
    display: block;
    margin-top: 10px;
    font-weight: bold;
}

input, select, textarea {
    width: 100%;
    padding: 10px;
    margin-top: 6px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
}

input:focus, select:focus, textarea:focus {
    border-color: #2b5797;
    outline: none;
    box-shadow: 0 0 5px rgba(43, 87, 151, 0.4);
}

button {
    background-color: #2b5797;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #1e3e6e;
}

input:invalid {
    border-color: #e74c3c;
}
